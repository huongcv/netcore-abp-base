@page

@model OrdWebAppIdentity.Pages.Account.LoginModel
@{
    Layout = "_Layout";
}
<style>
    label.error {
        color: red;
    }
</style>

<div class="container" style="max-width: 600px">
    <div class="card mt-3 shadow-sm rounded">
        <div class="card-body p-5">
            <h4>Đăng nhập</h4>
            <form method="post" class="mt-4" id="loginForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="TenantName" class="form-label">Tenant</label>
                    <input asp-for="TenantName" class="form-control" name="TenantName"/>
                </div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" name="UserName"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" type="password" name="Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary mt-3" button-type="Primary" name="Action" value="Login">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>
